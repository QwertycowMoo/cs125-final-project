<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/trophy_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shelf"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/shelf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ster0"
                        android:layout_width="122dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/trophy_ster_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_geoff"
                        android:layout_width="119dp"
                        android:layout_height="132dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_geoff_foreground" />

                    <ImageView
                        android:id="@+id/ster1"
                        android:layout_width="126dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/trophy_ster_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shelf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/trophy_daniel"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_daniel_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_rima"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_rima_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_ben"
                        android:layout_width="138dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_ben_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shelf3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/trophy_david"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        android:tint="@android:color/transparent"
                        app:srcCompat="@mipmap/trophy_david_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_evan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_evan_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_kevin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_kevin_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shelf4"
                    android:layout_width="match_parent"
                    android:layout_height="141dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/trophy_message"
                        android:layout_width="match_parent"
                        android:layout_height="83dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:background="@drawable/gradient_background"
                        android:gravity="center"
                        android:text="Click a trophy to view its info."
                        android:textColor="@android:color/black"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/buy_trophy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_background"
                        android:text="Unlock Trophy" />
                </LinearLayout>

                <TextView
                    android:id="@+id/trophy_coins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0 Challen Coins"
                    android:textColor="#FFEB3B"
                    android:textSize="24sp"
                    android:typeface="monospace" />

                <LinearLayout
                    android:id="@+id/menu_options"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/button_back"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="16px"
                        android:layout_weight="1"
                        android:background="@drawable/gradient_background"
                        android:padding="16px"
                        app:srcCompat="@android:drawable/ic_menu_revert" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>