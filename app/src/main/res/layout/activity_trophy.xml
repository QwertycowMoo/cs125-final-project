<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/trophy_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shelf"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/shelf1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/trophy_geoff"
                        android:layout_width="match_parent"
                        android:layout_height="132dp"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_geoff_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shelf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/trophy_daniel"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_daniel_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_rima"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_rima_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_ben"
                        android:layout_width="138dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_ben_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shelf3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/trophy_david"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_david_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_evan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_evan_foreground" />

                    <ImageButton
                        android:id="@+id/trophy_kevin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00FFFFFF"
                        app:srcCompat="@mipmap/trophy_kevin_foreground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shelf4"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/trophy_message"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:background="#CCCECE"
                        android:text="currently nothing :("
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_options"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/button_back"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="16px"
                        android:layout_weight="1"
                        android:padding="16px"
                        app:srcCompat="@android:drawable/ic_menu_revert" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>